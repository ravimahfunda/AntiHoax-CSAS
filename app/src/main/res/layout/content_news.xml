<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chevalier.antihoax.NewsActivity"
    tools:showIn="@layout/activity_news"
    android:padding="8dp"
    android:background="@color/backgroundShader">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hot News"
            android:background="@color/backgroundLight"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:id="@+id/berita1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/backgroundLight"
            android:onClick="berita">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:src="@drawable/gambar1"
                android:scaleType="centerCrop"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news_title1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/berita2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/backgroundLight"
            android:onClick="berita">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:src="@drawable/gambar2"
                android:scaleType="centerCrop"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_title2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/berita3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/backgroundLight"
            android:onClick="berita">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:src="@drawable/gambar3"
                android:scaleType="centerCrop"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_title3"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresh News"
            android:background="@color/backgroundLight"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/backgroundLight"
            android:onClick="berita">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:src="@drawable/gambar1"
                android:scaleType="centerCrop"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_title1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/backgroundLight"
            android:onClick="berita">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:src="@drawable/gambar2"
                android:scaleType="centerCrop"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_title2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/backgroundLight"
            android:onClick="berita">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:src="@drawable/gambar3"
                android:scaleType="centerCrop"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_title3"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
